<Window x:Class="LaboratoryWork14_15.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LaboratoryWork14_15"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Запустити навчання" Click="TrainNetwork" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10"/>

        <Button x:Name="LoadImageButton" Content="Завантажити зображення для тестування" Click="LoadTestImage_Click" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,50,10,10" IsEnabled="False"/>
        <Button x:Name="PredictButton" Content="Визначити клас зображення" Click="Predict_Click" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,100,10,10" IsEnabled="False"/>

        <TextBlock x:Name="ResultText" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>
        <Image x:Name="TestImage" Width="100" Height="100" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20"/>
    </Grid>
</Window>
